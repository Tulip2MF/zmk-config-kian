#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define HOST_OS 2



#define DEFAULT 0
#define NUM     1
#define NAV     2
#define MISC    3




&mt {
    tapping-term-ms = <150>;
    flavor = "tap-preferred";
    };


/ {
    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "homerow mods";
            #binding-cells = <2>;
            tapping_term_ms = <200>;
            quick-tap-ms = <0>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
            };
        
        ht_hp: ht_hp_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HT_HP";
            #binding-cells = <2>;
            tapping-term-ms = <250>;
            flavor = "hold-preferred";
            bindings = <&kp>, <&kp>;
            };
        parentheses_chevrons: parentheses_chevrons {
            compatible = "zmk,behavior-mod-morph";
            label = "parentheses_chevrons";
            #binding-cells = <0>;
            bindings = <&parentheses>, <&chevrons>;
            mods = <(MOD_LSFT)>;
            };


        };
    };

/ {
    macros {

            your_macro: your_macro {
            compatible = "zmk,behavior-macro";
            label = "YOUR_MACRO";
            #binding-cells = <0>;
            bindings =
               <&macro_press &kp LSHFT>,
               <&macro_press &kp LGUI>,
               <&macro_tap &kp S>,
               <&macro_release &kp LGUI>,
               <&macro_release &kp LSHFT>;
            };

            macro_par: macro_par {
                label = "macro_par";
                compatible = "zmk,behavior-macro";
                #binding-cells = <0>;
                tap-ms = <10>;
                wait-ms = <10>;
                bindings = <&macro_tap &kp LPAR &kp RPAR &kp LEFT>;
                };

            parentheses: parentheses {
                        label = "parentheses";
                        compatible = "zmk,behavior-macro";
                        #binding-cells = <0>;
                        bindings = <&macro_tap &kp LPAR &kp RPAR &kp LEFT>;
                };

            chevrons: chevrons {
                label = "chevrons";
                compatible = "zmk,behavior-macro";
                #binding-cells = <0>;
                wait-ms = <10>;
                tap-ms = <10>;
                bindings = <&macro_tap &kp LT &kp GT &kp LEFT>;
                };

          };
    };


/ {
    combos {
        compatible = "zmk,combos";
        combo_scrn_shot {
            timeout-ms = <70>;
            key-positions = <0 4>;
            bindings = <&kp LG(LS(S))>;
        };

        combo_scsnip {
            timeout-ms = <70>;
            key-positions = <30 32>;
            bindings = <&kp TAB>;
        };
        combo_bt_clr {
            timeout-ms = <70>;
            key-positions = <14 9>;
            bindings = <&bt BT_CLR>;
        };


        combo_alt_tab {
            timeout-ms = <70>;
            key-positions = <24 5>;
            bindings = <&kp LA(TAB)>;
        };

        combo_Parentheses {
            timeout-ms = <70>;
            key-positions = <0 29>;
            bindings = <&macro_par>;
        };

        combo_bracket_round_l {
            timeout-ms = <70>;
            key-positions = <1 18>;
            bindings = <&kp LPAR>;
        };
        combo_bracket_round_r {
            timeout-ms = <70>;
            key-positions = <1 19>;
            bindings = <&kp RIGHT_PARENTHESIS>;
        };

        combo_parentheses_chevrons {
            timeout-ms = <70>;
            key-positions = <1 29>;
            bindings = <&parentheses_chevrons>;
        };

        combo_bracket_square_l {
            timeout-ms = <70>;
            key-positions = <0 16>;
            bindings = <&kp LBKT>;
        };

        combo_bracket_square_r {
            timeout-ms = <70>;
            key-positions = <0 17>;
            bindings = <&kp RBKT>;
        };
    };

};



